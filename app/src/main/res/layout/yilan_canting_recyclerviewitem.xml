<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/yilan_item_cardview"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        app:contentPadding="5dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp">


        <ImageView
            android:id="@+id/yilan_canting_recyclerviewitem_pic"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:text="正在加载图片"
            android:gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="170dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/yilan_canting_recyclerviewitem_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="这里是餐厅的简单介绍"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/yilan_canting_recyclerviewitem_yishoufenxiang"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="13份 已售| 分享 5次"
                android:textSize="15sp"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>