<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Light">

        <ImageView
            android:id="@+id/login_toolbar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back1"/>

        <TextView
            android:id="@+id/user_toolbar_title"
            android:text="登录"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/toolbar"
        android:background="@color/textColor"
        android:orientation="horizontal" />


    <LinearLayout
        android:id="@+id/user_login_linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/user_login_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="请输入账号"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/signup_edit_bg"
            android:inputType="phone"
            android:maxLength="11"/>


        <EditText
            android:id="@+id/user_login_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="请输入密码"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/signup_edit_bg"
            android:inputType="textPassword"
            android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
            android:maxLength="20"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/user_login_linear4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@+id/user_login_linear3">

        <Button
            android:id="@+id/user_login_login"
            android:layout_width="match_parent"
            android:layout_height="48.0dip"
            android:layout_margin="16dp"
            android:background="#00caab"
            android:gravity="center"
            android:text="登录"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="或者"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_login_linear5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/user_login_weixin"
            android:layout_width="match_parent"
            android:layout_height="48.0dip"
            android:layout_margin="16dp"
            android:background="#00caab"
            android:gravity="center"
            android:text="微信登录"
            android:textSize="18sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/usre_goto_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="没有账号,立即注册"
        />
</LinearLayout>